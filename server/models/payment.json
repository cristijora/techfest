{
  "name": "payment",
  "plural": "payments",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "amount": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "tax": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "senderId": {
      "type": "string",
      "required": true
    },
    "receiverId": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date",
      "defaultFn": "now"
    },
    "category":{
      "type":"string",
      "required":true,
      "default":""
    }
  },
  "validations": [],
  "relations": {
    "sender": {
      "type": "belongsTo",
      "model": "customer",
      "foreignKey": "senderId"
    },
    "receiver": {
      "type": "belongsTo",
      "model": "customer",
      "foreignKey": ""
    },
    "categories": {
      "type": "hasMany",
      "model": "category",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {}
}
